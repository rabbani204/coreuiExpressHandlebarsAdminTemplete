<div class="breadcrumb bg-color-1">
    <div class=" breadcrumb-item active hb-dashboard ">
        <span class="text-dark ml-2">
            <strong>FileType List</strong>
        </span>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-auto">
            <a href="/admin/filetype/create" class="btn btn-primary">Add New</a>
        </div>

    </div>

    <table class="table table-striped table-sm bg-color-8 table-bordered table-responsive-sm mt-3">
        <thead>
            <tr>
                <th>Extension</th>
                <th>Primery</th>
                <th>Listed</th>
                <th>Same_As</th>
                <th>Name</th>
                <th>Type</th>
                <th>Group</th>
                <th>Sub_Group</th>
            </tr>
        </thead>
        <tbody>
            {{# each filetyps }} {{# each this}}
            <tr>
                <td>{{this.ext}}</td>
                <td>{{this.primery}}</td>
                <td>{{this.listed}}</td>
                <td>{{this.same_as}}</td>
                <td>{{this.name}}</td>
                <td>{{this.type}}</td>
                <td>{{this.group.name}}</td>
                <td>{{this.sub_group.name}}</td>
                <td>
                    <a href="/admin/filetype/{{this.id}}/edit">
                        <i class="fa fa-pencil"></i>
                    </a>
                </td>
                <td>
                    <button data-toggle="modal" data-target="#myModal">
                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                    </button>
                </td>


                                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Confirm Delete</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <div class="modal-header">
                                Are you sure you want to delete the entry?
                            </div>
                            <div class="modal-footer">
                                <a href="/admin/filetype/{{this.id}}/delete" class="btn btn-danger">yes</a>
                            </div>
                        </div>

                    </div>
                </div>


            </tr>
            {{/each}} {{/each}}
        </tbody>
    </table>
</div>