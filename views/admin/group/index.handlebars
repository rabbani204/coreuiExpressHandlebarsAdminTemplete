<div class="breadcrumb bg-color-1">
    <div class=" breadcrumb-item active hb-dashboard ">
        <span class="text-dark ml-2">
            <strong>Group List</strong>
        </span>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-auto">
            <a href="/admin/group/create" class="btn btn-primary">Add New</a>
        </div>

    </div>

    <table class="table table-striped table-sm bg-color-8 table-bordered table-responsive-sm mt-3">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            {{# each groups }} {{# each this}}
            <tr>
                <td>
                    <a href="/admin/group/{{this.id}}">{{this.name}}</a>
                    <td><a href="/admin/group/{{this.id}}/edit"><i class="fa fa-pencil"></i></a></td>
                </td>

                <td>
                    <button data-toggle="modal" data-target="#myModal">
                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                    </button>
                </td>


                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Confirm Delete</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <div class="modal-header">
                                Are you sure you want to delete the entry?
                            </div>
                            <div class="modal-footer">
                                <a href="/admin/group/{{this.id}}/delete" class="btn btn-danger">yes</a>
                            </div>
                        </div>

                    </div>
                </div>


            </tr>
            {{/each}} {{/each}}
        </tbody>
    </table>
</div>