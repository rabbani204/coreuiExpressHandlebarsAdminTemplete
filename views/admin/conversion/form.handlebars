<div class="app flex-row align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 style="text-align: center">Conversion</h2>
                <div class="card mx-4">
                    <div class="card-body p-4">
                        {{#if conversion.id}}
                        <form method="post" action="/admin/conversion/{{conversion.id}}">
                        {{else}}
                        <form method="post" action="/admin/conversion">
                         {{/if}}
                            <div class="form-group">
                                <label for="source">Source</label>
                                <input type="text" name="source" class="form-control"
                                 id="source" value="{{conversion.source}}"
                                  placeholder="Enter Source">
                            </div>

                            <div class="form-group">
                                <label for="target">Target</label>
                                <input type="text" name="target" value="{{conversion.target}}" class="form-control" id="target" aria-describedby="emailHelp" placeholder="Enter Target">
                            </div>

                            <div class="extra_params">
                                <label for="exampleInputEmail1">Extra_Params</label>
                                <input type="text" name="extra_params" value="{{conversion.source}}" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Extra_Params">
                            </div>

                            <div class="form-group">
                                <label for="pagers">Pages</label>
                                <input type="text" name="pages" value="{{conversion.pages}}" class="form-control" id="pages" aria-describedby="emailHelp" placeholder="Enter Pages">
                            </div>

                            <div class="form-group">
                                <label for="software">Software</label>
                                <input type="text" name="software" value="{{conversion.software}}" class="form-control" id="software" aria-describedby="emailHelp" placeholder="Enter Software">
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>